@model UCSProductGallery.Models.Product

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">@Model.Title</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <img src="@Model.Thumbnail" alt="@Model.Title" class="w-full h-64 object-cover mb-4">
            <div class="grid grid-cols-3 gap-2">
                @foreach (var image in Model.Images)
                {
                <img src="@image" alt="@Model.Title" class="w-full h-24 object-cover">
                }
            </div>
        </div>
        <div>
            <p class="text-gray-600">@Model.Description</p>
            <p class="text-lg font-bold">$@Model.Price</p>
        </div>
    </div>
</div>
