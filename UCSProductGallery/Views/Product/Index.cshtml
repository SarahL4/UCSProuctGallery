@model IEnumerable<UCSProductGallery.Models.Product>

    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Product List</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            @foreach (var product in Model)
        {
            <div class="border p-4 rounded-lg shadow-lg">
                <img src="@product.Thumbnail" alt="@product.Title" class="w-full h-48 object-cover mb-4">
                <h2 class="text-xl font-semibold">@product.Title</h2>
                <p class="text-gray-600">@product.Description</p>
                <p class="text-lg font-bold">$@product.Price</p>
                <a href="/Product/Details/@product.Id" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded">View Details</a>
            </div>
        }
        </div>
    </div>
