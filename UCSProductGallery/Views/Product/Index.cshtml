@model IEnumerable<UCSProductGallery.Models.Product>

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>产品列表</title>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let products = [];

            function fetchProducts() {
                fetch('https://dummyjson.com/products') // Replace with your actual API endpoint
                    .then(response => response.json())
                    .then(data => {
                        products = data.products;
                        displayProducts(products);
                    })
                    .catch(error => {
                        console.error('Error fetching products:', error);
                        document.querySelector('.grid.grid-cols-3.gap-4').innerHTML = '<p>Error loading products.</p>';
                    });
            }

            function displayProducts(products) {
                const productListDiv = document.querySelector('.grid.grid-cols-3.gap-4');
                if (products && products.length > 0) {
                    productListDiv.innerHTML = products.map(createProductHTML).join('');
                } else {
                    productListDiv.innerHTML = '<p>No products found.</p>';
                }
            }

            function createProductHTML(product) {
                return `
                    <div class="bg-white p-4 rounded shadow">
                        <img src="${product.thumbnail}" alt="${product.title}" class="w-full h-32 object-cover mb-2">
                        <h3 class="font-semibold">${product.title}</h3>
                        <p>${product.price} kr</p>
                        <a href="/Product/Details?id=${product.id}" class="inline-block mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            详情
                        </a>
                    </div>
                `;
            }

            function filterProducts() {
                const selectedCategories = Array.from(document.querySelectorAll('input[type="checkbox"]:checked')).map(checkbox => checkbox.nextSibling.textContent.trim());
                const filteredProducts = selectedCategories.length > 0
                    ? products.filter(product => selectedCategories.includes(product.category))
                    : products;
                displayProducts(filteredProducts);
            }

            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.addEventListener('change', filterProducts);
            });

            fetchProducts();
        });
    </script>
</head>
<body class="bg-gray-100 p-6">
    <div class="container mx-auto">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">产品列表</h1>
            <a href="@Url.Action("FetchProducts")" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                更新产品
            </a>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["Message"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                @TempData["Error"]
            </div>
        }

        <div class="flex">
            <div class="w-1/4 bg-white p-4 rounded shadow">
                <h2 class="text-lg font-semibold mb-2">类别</h2>
                <div>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> smartphones
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> laptops
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> fragrances
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> skincare
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> groceries
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> home-decoration
                    </label>
                </div>
            </div>
            <div class="w-3/4 ml-4">
                <div class="grid grid-cols-3 gap-4">
                    <!-- Product list will be loaded here -->
                </div>
            </div>
        </div>
        <div class="mt-6">
        </div>
    </div>
</body>
</html>
