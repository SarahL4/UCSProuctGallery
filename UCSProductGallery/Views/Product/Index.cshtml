<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>产品列表</title>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('https://dummyjson.com/products') // Replace with your actual API endpoint
                .then(response => response.json())
                .then(data => { // The API returns an object with a 'products' property
                    const products = data.products;

                    const productListDiv = document.querySelector('.grid.grid-cols-3.gap-4');

                    // Function to create product HTML
                    function createProductHTML(product) {
                        return `
                            <div class="bg-white p-4 rounded shadow">
                                <img src="${product.thumbnail}" alt="${product.title}" class="w-full h-32 object-cover mb-2">
                                <h3 class="font-semibold">${product.title}</h3>
                                <p>${product.price} kr</p>
                                <a href="/Product/Details?id=${product.id}" class="inline-block mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                    详情
                                </a>
                            </div>
                        `;
                    }

                    // Populate product list
                    if (products && products.length > 0) {
                        productListDiv.innerHTML = products.slice(0, 6).map(createProductHTML).join(''); // Display more products
                    } else {
                        productListDiv.innerHTML = '<p>No products found.</p>';
                    }
                })
                .catch(error => {
                    console.error('Error fetching products:', error);
                    document.querySelector('.grid.grid-cols-3.gap-4').innerHTML = '<p>Error loading products.</p>';
                });
        });
    </script>
</head>
<body class="bg-gray-100 p-6">
    <div class="container mx-auto">
        <h1 class="text-2xl font-bold mb-4">产品列表</h1>
        <div class="flex">
            <div class="w-1/4 bg-white p-4 rounded shadow">
                <h2 class="text-lg font-semibold mb-2">类别</h2>
                <div>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 1
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 2
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 3
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 4
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 5
                    </label>
                    <label class="block">
                        <input type="checkbox" class="mr-2"> 类别 6
                    </label>
                </div>
            </div>
            <div class="w-3/4 ml-4">
                <div class="grid grid-cols-3 gap-4">
                    <!-- Product list will be loaded here -->
                </div>
            </div>
        </div>
        <div class="mt-6">
        </div>
    </div>
</body>
</html>
